{pre_hooks, [{"(linux|darwin)", compile, "make nif_compile DRIVER_REV=v8.9.16"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make nif_clean"}]}.

{plugins, [rebar3_hex]}.

{deps, [
    {trie, "1.7.4"}
]}.

{so_name, "phonenumber_util_nif.so"}.

{eunit_tests, [{dir, "test"}]}.

{erl_opts, [
    warnings_as_errors ,
    warn_export_all
]}.
